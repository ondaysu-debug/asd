# Telegram
TG_BOT_TOKEN=123:ABC
TG_CHAT_ID=123456789
TG_PARSE_MODE=Markdown

# GeckoTerminal API (public, no Pro)
GECKO_BASE=https://api.geckoterminal.com/api/v2

# GT limits (public)
GECKO_CALLS_PER_MIN=28
GECKO_RETRY_AFTER_CAP_S=3.0

# Discovery breadth (sources: new,trending,pools,dexes)
GECKO_SOURCES=new,trending,pools,dexes
GECKO_ROTATE_SOURCES=true
GECKO_PAGES_PER_CHAIN=2
GECKO_DEX_PAGES_PER_CHAIN=1
GECKO_PAGE_SIZE=100

# Filters (pre-check)
LIQUIDITY_MIN=50000
LIQUIDITY_MAX=800000
TX24H_MAX=2000
CHAINS=base,solana,ethereum

# Precise windows / cache
GECKO_TTL_SEC=60
# Dynamic OHLCV budget per cycle
MAX_OHLCV_PROBES_CAP=30
GECKO_SAFETY_BUDGET=4
MIN_OHLCV_PROBES=3

# Anti-noise
ALERT_RATIO_MIN=1.0

# Seen cache (minutes)
SEEN_TTL_MIN=15

# Loop
COOLDOWN_MIN=30
LOOP_SECONDS=60
CHAIN_SCAN_WORKERS=4
ALERT_FETCH_WORKERS=8
MAX_CYCLES=0

# Logging candidates
SAVE_CANDIDATES=true
CANDIDATES_PATH=./candidates.jsonl

# Database
DB_PATH=wake_state.sqlite

# Revival algorithm
REVIVAL_ENABLED=true
REVIVAL_MIN_AGE_DAYS=7
REVIVAL_PREV_WEEK_MAX_USD=3000
REVIVAL_NOW_24H_MIN_USD=1500
REVIVAL_RATIO_MIN=2.0
REVIVAL_USE_LAST_HOURS=0
